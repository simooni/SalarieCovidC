{% extends 'base.html.twig' %}

{% block stylesheets %}
   {{parent()}}
   <link rel="stylesheet" href="{{  asset('css/liste.css') }}" rel="stylesheet">
   <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.1/css/dataTables.bootstrap4.min.css" />

    
{% endblock %}

{% block body %}
    <div class="container card-cent">
        <div class="alert alert-success mt-3 text-center shadow alert-bienvenu" role="alert">
            <div class="row row-entity ml-1">
                <div class="col-sm-4 text-left col-user">
                    <i class="fas fa-user mr-1"></i> Bienvenu <strong>{{app.user.user}}</strong>
                </div>
                <div class="col-sm-4 col-icon-user">
                        <i class=""></i> 
                </div>
                <div class="col-sm-4 text-right col-user">
                    <a href="{{ path('app_logout') }}" class="text-success text-deconnecter"> 
                        <i class="fas fa-arrow-alt-circle-left mr-1 "></i> Se déconnecter
                    </a>
                </div>
            </div>
            
        </div>
    </div>   
    
    <div class="contenu-index contenu_color" >
        
    
    <a href="{{ path( 'exporter') }}" > <button type="button" class="btn btn-primary btn-exporter">Exporter</button> </a>
   

<table id="example" class="table table-striped table-bordered" style="width:100%">
<thead>
    
    <tr>
        <th>Id</th>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Lieu De Naissance</th>
        <th>Date De Naissance</th>
        <th>CIN</th>
        <th>Site</th>
        <th>Total documents</th>
        <th>Action</th>
    </tr>
</thead>
<tbody>
    {% for etudiant in etudiants %}
        <tr>
            <td>{{etudiant.id}}</td>
            <td>{{etudiant.nom}}</td>
            <td>{{etudiant.prenom}}</td>
            <td>{{etudiant.lieu_naissance}}</td>
            <td>{{etudiant.date_naissance |date("m/d/Y") }}</td>
            <td>{{etudiant.cin}}</td>
            <td>{{etudiant.site}}</td>
            <td>{{etudiant.number}}</td>
            <td><a href="{{path('RendezVous',{'id':etudiant.id})}}" target="_blank"><i class='fas fa-eye'></i></a></td>
            
        </tr>
    {% endfor %}
   
</tbody>
<tfoot>
    <tr>
        <th>Id</th>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Lieu De Naissance</th>
        <th>Date De Naissance</th>
        <th>CIN</th>
        <th>Action</th>
    </tr>
</tfoot>
</table>

    </div>
    <div class="modal-backdrop fade show" id="show_loader" hidden> <div class="loader1"></div> </div>
 


{% endblock %}
{% block javascripts %}
    {{ parent()}} 
<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.11.1/js/dataTables.bootstrap4.min.js"></script>

<script type="text/javascript">
        $(document).ready(function() {
            $('#example').DataTable();
        } );
    </script>



{% endblock %}

